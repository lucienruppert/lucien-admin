# Ensure HTTPS is always used
RewriteEngine On

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Route API requests to the backend API index.php
RewriteCond %{REQUEST_URI} ^/backend/api/
RewriteRule ^backend/api/(.*)$ backend/api/index.php [L]

# Handle SPA (Single Page Application) fallback
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Ignore direct access to index.html
  RewriteRule ^index\.html$ - [L]

  # Redirect all other requests to index.html if not a file or directory
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>